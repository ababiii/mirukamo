<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 회원정보 처리 SQL -->
<mapper namespace="com.mirukamo.ai.dao.usersMapper">

	<!-- 회원 정보 저장 -->
	<insert id="insertUsers" parameterType="Users">
	insert into mirukamo_member
	(id
	,password
	,email
	,email2
	,name
	,phone
	,birth
	)
	values (
	#{id},
	#{password},
	#{email},
	#{email2},
	#{name},
	#{phone},
	#{birth}
	) 
	</insert>
	
	
	<select id="selectUser" parameterType="String" resultType="Users">
		select 
			<!-- id userId
			,password userPassword -->
			*
		from
			mirukamo_member
		where
			id=#{id}
	</select>
	
	<select id="selectAllUsers" resultType="Users">
		select
			*
		from 
			mirukamo_member
	</select>
	
	<!-- 이메일 중복환인 -->
	<select id="selectEmail" parameterType="map" resultType="Users">
	select 
		* 
	from 
		mirukamo_member 
	where 
		email=#{a} and email2=#{b}
	</select>

</mapper>
