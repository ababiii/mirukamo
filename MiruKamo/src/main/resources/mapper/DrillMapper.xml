<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 검색 처리 SQL -->
<mapper namespace="com.mirukamo.ai.dao.DrillMapper">

	<!-- db에 문장 중복 없이 가져오기 전체 출력 -->
	<select id="getword" resultType="drill">
	select distinct original_word from mirukamo_drill ORDER BY DBMS_RANDOM.RANDOM
	</select>
	
	<!-- 모든 단어 가져오기 -->
	<select id="word" resultType="drill">
	select * from mirukamo_drill
	</select>
</mapper>